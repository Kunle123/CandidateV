{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/*.js": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "env": {
    "VITE_SUPABASE_URL": "https://aqmybjkzxfwiizorveco.supabase.co",
    "VITE_SUPABASE_ANON_KEY": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImFxbXliamt6eGZ3aWl6b3J2ZWNvIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NDUyNDU1NTYsImV4cCI6MjA2MDgyMTU1Nn0.Ais3ZEu95OyqitcscyfmztxogCqcqrHjo9BZWPrqQKw",
    "VITE_API_BASE_URL": "https://candidate-v-frontend.vercel.app/api",
    "VITE_ENABLE_AUTH": "true",
    "VITE_ENABLE_ANALYTICS": "true"
  },
  "rewrites": [
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/api/auth/:path*", "destination": "https://candidatev-auth-service.up.railway.app/api/auth/:path*" },
    { "source": "/api/users/:path*", "destination": "https://candidatev-user-service.up.railway.app/api/users/:path*" },
    { "source": "/api/cv/:path*", "destination": "https://candidatev-cv-service.up.railway.app/api/cv/:path*" },
    { "source": "/api/export/:path*", "destination": "https://candidatev-export-service.up.railway.app/api/export/:path*" },
    { "source": "/api/ai/:path*", "destination": "https://ai-service-production.up.railway.app/api/ai/:path*" },
    { "source": "/api/payments/:path*", "destination": "https://candidatev-payment-service.up.railway.app/api/payments/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Accept, Authorization" }
      ]
    }
  ]
} 