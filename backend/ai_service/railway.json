{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "startCommand": "uvicorn app.main:app --host :: --port 8002"
  },
  "environment": {
    "PORT": "8002",
    "variables": {
      "CV_SERVICE_URL": "http://candidatev.railway.internal:8003"
    },
    "secrets": [
      "OPENAI_API_KEY",
      "CV_SERVICE_AUTH_TOKEN"
    ]
  }
} 