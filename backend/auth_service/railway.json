{
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "healthcheck": {
    "path": "/health",
    "interval": 30,
    "timeout": 5,
    "retries": 3
  },
  "environment": {
    "PORT": "8001",
    "JWT_ALGORITHM": "HS256",
    "ACCESS_TOKEN_EXPIRE_MINUTES": "30",
    "RESET_TOKEN_EXPIRE_MINUTES": "15",
    "CORS_ORIGINS": "http://localhost:3000,https://candidatev.vercel.app"
  }
} 