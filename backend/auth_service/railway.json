{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install fastapi uvicorn pydantic email-validator"
  },
  "deploy": {
    "startCommand": "python -m uvicorn app:app --host 0.0.0.0 --port 8000",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "healthcheck": {
    "path": "/api/health",
    "interval": 30,
    "timeout": 5,
    "retries": 3
  }
} 